# Configurações do Prismic CMS
PRISMIC_ENDPOINT=your-prismic-repo-name
PRISMIC_ACCESS_TOKEN=your-prismic-access-token

# Configurações do Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OpenAI para reescrita automática de notícias
OPENAI_API_KEY=your-openai-api-key

# NewsAPI para buscar notícias
NEWS_API_KEY=your-newsapi-key

# Configurações do Facebook para postagem automática
META_ACCESS_TOKEN=your-facebook-page-access-token
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# URL do seu site
SITE_URL=https://www.orubronegronews.com

# Google Analytics e Ads
NEXT_PUBLIC_GTM_ID=your-google-analytics-id
NEXT_PUBLIC_GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-google-site-verification

# NextAuth (se usar autenticação)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret